<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btnBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:text">@string/back</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:textColor">@drawable/back_text_color</item>
        <item name="android:drawableLeft">@drawable/wexin_back</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="dialog_loading" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_loading_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
